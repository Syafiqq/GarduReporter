<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/vertical_padding"
        android:paddingEnd="@dimen/horizontal_padding"
        android:paddingLeft="@dimen/horizontal_padding"
        android:paddingRight="@dimen/horizontal_padding"
        android:paddingStart="@dimen/horizontal_padding"
        android:paddingTop="@dimen/vertical_padding"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="app.freelancer.syafiqq.gardureporter.controller.Dashboard">

    <ProgressBar
            android:id="@+id/content_dashboard_progress_bar_submit"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

    <TextView
            android:text="@string/content_dashboard_textview_induk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/accent"
            android:layout_marginTop="4dp"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp" />

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/content_dashboard_searchablespinner_induk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical" />

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/stat_notify_sync"
                android:id="@+id/content_dashboard_imagebutton_induk_refresh"
                android:layout_gravity="center_vertical" />

    </LinearLayout>

    <TextView
            android:text="@string/content_dashboard_textview_penyulang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/accent"
            android:layout_marginTop="4dp"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp" />

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/content_dashboard_searchablespinner_penyulang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical" />

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/stat_notify_sync"
                android:id="@+id/content_dashboard_imagebutton_penyulang_refresh"
                android:layout_gravity="center_vertical" />

    </LinearLayout>

    <TextView
            android:text="@string/content_dashboard_textview_jenisgardu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/accent"
            android:layout_marginTop="4dp"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp" />

    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/content_dashboard_spinner_jenisgardu"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:paddingStart="6dp"
            android:paddingLeft="6dp" />

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/content_dashboard_edittext_substation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/content_dashboard_textview_substation" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/content_dashboard_edittext_voltage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/content_dashboard_textview_voltage"
                android:inputType="numberDecimal" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/content_dashboard_edittext_current"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/content_dashboard_textview_current"
                android:inputType="numberDecimal" />


    </android.support.design.widget.TextInputLayout>

    <Button
            android:id="@+id/content_dashboard_button_submit"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:enabled="false"
            android:text="@string/content_dashboard_button_submit" />

    <Switch
            android:text="@string/content_dashboard_accuracy_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/content_dashboard_switch_location_accuracy" />

</LinearLayout>
